pipeline {
    agent {
        docker {
            image 'node:latest'
            args '-p 3000:3000'
        }
    }
    stages {
        stage('Clone repo') {
            steps {
                git clone https://github.com/BenjaminLafage/demo-jenkins-pipeline.git
                echo "Clone du depot"
            }
        }
        stage('Build') {
            steps {
                echo "Build en cours ..."
                sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                sh 'npm run test'
                post {
                    always {
                        junit 'reports/*.xml'
                    }
                }
            }
        }
    }
    post {
        success {

            echo 'Pipeline réussi !'

        }

        failure {

            echo 'Pipeline échoué !'

        }
    }
}