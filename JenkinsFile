pipeline {
    agent {
        docker {
            image 'node:18-alpine'
        }
    }
    stages {
        stage('Clone repo') {
            steps {
                git url : 'https://github.com/BenjaminLafage/demo-jenkins-pipeline.git', branch: 'main'
                echo "Clone du depot"
            }
        }
        stage('Build') {
            steps {
                echo "Build en cours ..."
                sh 'npm ci'
            }
        }
        stage('Test') {
            steps {
                sh 'npm test'
                junit 'test.xml'
            }
        }
    }
    post {
        always {
            echo 'Fin du pipeline'
        }
        success {
            echo 'Pipeline réussi !'
        }
        failure {
            echo 'Pipeline échoué !'
        }
    }
}