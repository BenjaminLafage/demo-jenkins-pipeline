pipeline {
    agent {
        dockerContainer {
            image 'node:current-trixie'
        }
    }
    stages {
        stage('Clone repo') {
            steps {
                checkout scm
                echo "Clone du depot"
            }
        }
        stage('Build') {
            steps {
                echo "Build en cours ..."
                sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                sh 'npm run test'
            }
        }
    }
    post {
        always {
            publishTestResults testResultsPattern: 'reports/*.xml'
        }
        success {

            echo 'Pipeline réussi !'

        }

        failure {

            echo 'Pipeline échoué !'

        }
    }
}